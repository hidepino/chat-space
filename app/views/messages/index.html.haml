  .chat
    .header
      .select-group
        .select-group__title  group1
        %ul.select-group__members
          Member:
          %li.member user1
      .edit-group
        = link_to edit_group_path(@group), class:"edit-group__button" do
          Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message], html: { class: 'message-form' } do |f|
        = f.text_field :body, id:"upload-text"
        %label.upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
          = f.file_field :image, id: "upload-icon"
        %label.upload-label{for: "send-message"}
          .send-message Send
          = f.submit "Send", id:"send-message"
